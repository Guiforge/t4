{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "vuejs: chrome",
			"url": "http://localhost:8080",
			"webRoot": "${workspaceFolder}/t4_front/src",
			"breakOnLoad": true,
			"sourceMapPathOverrides": {
			  "webpack:///./src/*": "${webRoot}/*"
			},
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch server",
			"program": "${workspaceFolder}/t4_server/server.js",
			"stopOnEntry": true
		}
	]
}